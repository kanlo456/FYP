generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  password String
  username String
}

model customers {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  password String
}

model ticketInfo {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  Description     String
  assigned_to     String @map("assigned to")
  assignmentGroup String
  caller          String
  category        String
  configItem      String
  contactType     String
  impact          String
  offering        String
  priority        String
  service         String
  shortDesciption String
  state           String
  subcategory     String
  urgency         String
}
